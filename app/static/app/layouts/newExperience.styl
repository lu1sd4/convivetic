m-width = 900px

.nexp-container
	background-color #fff
	box-shadow 0 2px 5px 0 shadow-color
	padding 30px 45px
	display flex
	flex-direction column
	justify-content center
	padding-top 2em
	padding-bottom 2em
	max-width m-width
	margin-top 3em
	width 100%
	
	@media (max-width 768px)
		padding 30px 20px !important 

	
	.forum-footer
		display flex
		justify-content center
		
		button
			min-width 125px
			width 30%

	.new-experience
		margin-top 1.5em

		.form-control::-webkit-input-placeholder  
			color #ebebeb   /* WebKit, Blink, Edge */
		.form-control:-moz-placeholder  
			color #ebebeb   /* Mozilla Firefox 4 to 18 */
		.form-control::-moz-placeholder  
			color #ebebeb   /* Mozilla Firefox 19+ */
		.form-control:-ms-input-placeholder  
			color #ebebeb   /* Internet Explorer 10-11 */
		.form-control::-ms-input-placeholder  
			color #ebebeb   /* Microsoft Edge */
			
		.title-input
			font-size 20px
			
		.forum-type
			display flex
			justify-content space-around
		
		.f-type-data
			margin-top 2em
			
			@media (max-width 575.99px)
				input
					overflow hidden
					width 100%
		
		.img-hidden-field
			display none

		.media-type-container
			width 100%