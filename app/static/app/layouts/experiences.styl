
.exp-section
	display flex
	justify-content center
	margin 4em 0
	
	.exp-gra-c
		max-width 1760px
	
		.exp-section-title
			color texts-color
			font-size 26px
			

		.experiences-c
			display flex
			flex-direction row
			flex-wrap wrap
			justify-content flex-start
			margin-top -0.5em
			margin-left 15px

			.experience
				box-shadow 0 2px 5px 0 shadow-color
				margin-top 1.7em
				height auto
				margin-right 1.66666666667%
				width 15%
				
				@media (max-width 575.99px)
					margin-right 1.66666666667%
					width 95%

				@media (min-width 576px)
					margin-right 1.66666666667%
					width 95%
					
				// Medium devices (tablets, 768px and up)
				@media (min-width 768px)
					margin-right 2% !important
					width 48% !important

				// Large devices (desktops, 992px and up)
				@media (min-width 992px)
					margin-right 3.333% !important
					width 30% !important

				// Extra large devices (large desktops, 1200px and up)
				@media (min-width 1200px)
					margin-right 2% !important
					width 23% !important

				@media(min-width 1800px)
					margin-right 1.66666666667% !important;
					width 15% !important
					
				
				img 
					width 100%
				
				.exp-data
					padding-left 8px
					padding-right 8px
					padding-bottom 10px				
					
					.detail-c
						padding-left 12px
						padding-right 12px
				
						.popular-data-c
							display flex
							margin-bottom 0.3em
							margin-top 0.4em
							font-weight 300
							
							svg
								color links-color
							
							.views 
								flex-basis 30%
							
						.exp-title
							font-size 17px
							font-weight 700
							margin-top 0.3em
							color texts-color
						
						.content-c 
							p
								font-weight 300
						
						.publisher
							font-weight 300
							color texts-color

