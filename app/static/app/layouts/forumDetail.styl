f-m-width = 900px

.gral-df-container
	background-color blocks-background
	display flex
	justify-content center
	margin-top 0.5em
	padding-bottom 4em
	padding-left 25px
	padding-right 25px

	.f-detail-container
		background-color #fff
		box-shadow 0 2px 5px 0 shadow-color
		padding 30px 45px
		display flex
		flex-direction column
		justify-content center
		padding-top 2em
		padding-bottom 2em
		max-width f-m-width 
		margin-top 3em
		width 100%
		
		@media (max-width 768px)
			padding 30px 20px !important
			

		.detail-comments
			margin-top 4em
			
			p
				font-weight 400
				font-size 20px
				

			.d-comments
				display flex
				flex-direction column
				
				hr
					width 100%
					margin-bottom 0.8em
				
				.d-comment
					color texts-color
					padding 20px
					width 100%
					
					.comment-status
						flex-direction row-reverse
						display flex
						align-items center
						margin-bottom 1rem
						h4,h5,h6
							font-weight 300
							margin-bottom 0
						.filler
							flex-grow 1

					.comment-header
						display flex
						align-items center
						
						@media (max-width 575.99px)
							flex-direction column
							
							p
								margin-left inherit !important
						
						h6
							margin-bottom 0	
						
						p
							margin-left auto
							color texts-color
							font-weight 300
							font-size 15px
							margin-bottom 0
							padding-bottom 0
						
					.comment-detail
						margin-top 1em

						p
							color texts-color
							font-weight 300
							font-size 17px
							
							@media (max-width 575.99px)
								text-align center
					
					.comment-footer
						p
							color texts-color
							font-weight 300
							font-size 14px
							margin-bottom 0
							padding-bottom 0

					.comment-c-din
						margin-top 2em
						display flex
						flex-direction column
						justify-content center
						align-items center
						margin-bottom 2em
						small
							font-weight 300
		
		.login-info
			display flex
			
			@media(max-width 575.99px)
				flex-direction column

				button
					margin-top 1em
					margin-left inherit !important
					
			p
				align-self center
				margin-bottom 0
				padding-bottom 0

			button
				margin-left auto
		

		.d-new-comment
			display flex
			flex-direction column
			margin-top 1.5em
			
			.form-control::-webkit-input-placeholder  
				color #ebebeb   /* WebKit, Blink, Edge */
			.form-control:-moz-placeholder  
				color #ebebeb   /* Mozilla Firefox 4 to 18 */
			.form-control::-moz-placeholder  
				color #ebebeb   /* Mozilla Firefox 19+ */
			.form-control:-ms-input-placeholder  
				color #ebebeb   /* Internet Explorer 10-11 */
			.form-control::-ms-input-placeholder  
				color #ebebeb   /* Microsoft Edge */
			
			button
				background-color links-color
				margin-top 0.7em
				min-width 125px
				width 30%
		
		hr
			margin-top 0
			width 100%
							
			
		.detail-c
			display flex
			
			@media (max-width 767.99px)
				flex-direction column
				justify-content center
				
				.prof-image
					margin-right 0 !important
					width 100% !important
				
				.detail-right
					margin-top 2em
					width 100% !important
					
			.prof-image
				margin-right 3%
				width 75px
				height 75px
				img			
					width 100%
					height 100%
			
			.detail-right
				display flex
				flex-direction column
				width 87%
				
				.detail-c-din
					margin-top 2em
					display flex
					flex-direction column
					justify-content center
					align-items center
					margin-bottom 2em
					small
						font-weight 300

				.tags
					display flex
					justify-content flex-start				
					margin-bottom 1em		
						
					ul
						display flex
						width 100%
						
						@media (max-width 575.99px)
							flex-direction column
							
							li
								margin-top 0.5em
						
						a
							text-decoration none

						li
							padding 8px
							background icon-gray-color
							color #fff
							margin-right 5px
							&.filler
								flex-grow 1
								background transparent
				
				h4
					font-weight 400
					font-size 21px !important
					color texts-color
						
				p
					color texts-color
					font-weight 300
				
				.forum-date
					color texts-color
					font-weight 300
					font-size 14px
					margin-bottom 0.5em
					
				.thread-det-img
					max-width 400px

				.forum-status
					display flex
					align-items center
					margin-bottom 1rem
					h4
						font-weight 300
						margin-bottom 0
					.filler
						flex-grow 1
						

				.detail-social-c
					display flex
					margin 1em 0
					
					.social-left
						margin-right auto
						display flex
						
						.detail-n

							display flex
							flex-direction row

							.filler
								width 15px
							
							.forum-likes,
							.forum-dislikes

								display flex
								flex-direction row

								h5
									color texts-color
									font-weight 300
									font-size 18px

								svg
									color shadow-color
									height 20px
									width 20px
									margin-right 8px

								.thread-like,
								.thread-dislike
									margin-right 3px
									cursor pointer
									height 20px
									width 20px								
									.fa-thumbs-up:hover
										color green									
									.fa-thumbs-down:hover
										color red
								.thread-like.active
									.fa-thumbs-up
										color green
								.thread-dislike.active
									.fa-thumbs-down
										color red
					
					.social-right
						margin-left auto
						
						.forum-views
							display flex
							
							h5
								color texts-color
								font-weight 300
								font-size 18px

							svg
								color shadow-color
								height 20px
								width 20px
								margin-right 8px
								
								

































							
				

				
