.p-container
	padding-left 80px
	padding-right 80px

.exp-section
	.exp-section-title
		color texts-color
		font-size 28px
		margin-top 1em

	.experiences-c
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content flex-start
		margin-top -0.5em

		.experience
			box-shadow 0 2px 5px 0 shadow-color
			margin-left 15px
			margin-right 15px
			margin-top 1.7em
			height 370px
			width 320px
			
			.detail-c
				padding-left 12px
				padding-right 12px
		
				.popular-data-c
					display flex
					margin-bottom 0.3em
					margin-top 0.4em
					font-weight 300
					
					svg
						color links-color
					
					.views 
						flex-basis 30%
					
				.exp-title
					font-size 17px
					font-weight 700
					margin-top 0.3em
					color texts-color
				
				.content-c 
					p
						font-weight 300
				
				.publisher
					font-weight 300
					color texts-color

	.more-exp
		display flex
		font-size 18px
		margin-top 2.5em
		margin-left 15px
		
		a
			color links-color	
		
		i
			font-size 17px


.forum-section
	margin-top 3.2em
	
	.forum-c
		display flex
		flex-wrap wrap
		justify-content flex-start
		margin-top 0.2em
		
		.f-aside
			display flex
			flex-direction column
			margin-top 2em
			
			.forum-invitation
				border 2px solid #dadada
				padding 25px
				text-align center
				width 350px
				
				h5
					font-weight 500
				
				p
					font-weight 300
				
				button 
					background-color links-color
			
		
		.forum
			box-shadow 0 2px 5px 0 shadow-color
			padding 30px 25px
			margin-right 40px
			margin-left 15px
			margin-top 2em
			
			.f-image
				margin-right 20px
			
			.forum-item
				display flex
				flex-grow 2
				margin-bottom 1.5em
			
				.for-data
					display flex
					
					a
						color links-color 
						font-weight 600
						max-width 400px
					
					.comment-c
						position relative
						
						svg
							color #9e9e9e
							font-size 40px
							
						.comment-counter
							color #9e9e9e
							font-weight 300
							font-size 15px
							position absolute
							top 7px
							text-align center
							left 0
							right 0
							margin auto
							
				
				.forum-publisher
					.f-date
						margin-bottom 0
						font-weight 300
						font-size 15px
					
					.f-name 
						margin-bottom 0
						font-weight 300
				
.block-expl
	background-color blocks-background
	height 500px
	margin-top 3.5em
					
		
			
			
	
	

