.login-container

	background-image url('img/background.jpg')
	min-height 100vh
	background-size cover
	display flex
	flex-direction column	

	&::before,&::after
		box-flex 1
		flex-grow 1
		content ''
		display block
		height 24px
	&::before
		min-height 30px

	.login-box

		display flex
		width 900px
		flex-shrink 0
		box-shadow 0 4px 4px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2)
		min-height 500px
		margin 0 auto
		flex-direction row

		input[type=text],
		input[type=password]
		input[type=submit]

			width 100%

		.login-dec

			border-bottom-left-radius 4px
			border-top-left-radius 4px
			width 65%
			padding 20px 20px
			background-color rgba(254,254,254,.2)
			h1,h2,h3,h4,h5
				font-weight 300
				color white
		
		.login-form		

			border-bottom-right-radius 4px
			border-top-right-radius 4px
			width 35%
			background #fff
			padding 28px 30px
			position relative

			.login-logo

				width 100%
				margin-bottom 2em

			.form-group

				margin-bottom 1em

			.forgot-password
				position absolute
				bottom 0
				left 0%
				right 0%