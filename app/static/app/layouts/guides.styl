body
	background-color #f0f0f0

.footer-guide
	box-shadow 0 0 10px rgba(0,0,0,.15)
	background-color #e7e7e7
	display flex
	justify-content center
	height 150px
	margin-top auto
	bottom 0
	position absolute
	width 100%
	
	.footer-w
		display flex
		align-items center
		justify-content center
		height 100%
		width 100%
		max-width 1000px
		
		.back-btn
			margin-right auto
		
		.next-btn
			margin-left auto
	
.top-menu
	position relative
	margin-top 3em
	display flex
	justify-content center
	
	.top-menu-w
		align-items center
		display flex
		max-width 1000px
		width 100%
		
		svg
			color texts-color
			height 25px
			width 25px
			margin-right 5px
		
		hr
			background-color #cecece
			height 1px
			width 97%
		
		.decor
			background texts-color
			height 7px
			width 7px

.gmain-content
	position absolute
	margin auto
	top -10%
	left 0
	right 0
	bottom 0
	height 500px
	width 700px
	
	.gmain-wrapper
		align-items center
		position relative
		display flex
		justify-content center
		height 100%
		width 100%
		
		.guide-title
			text-align center
			
			h1
				color texts-color
				font-size 35px
				font-weight 700
			
			h2
				color texts-color
				font-size 28px
				font-weight 400
			
			button
				font-size 19px
				height 50px
				width 200px
				margin-top 3em
			
		.guide-test
			width 100% 

			textarea
				margin-top 2em
				width 100%
			
		.guide-test-img
			width 100%
			
			img
				margin-bottom 1em
				
			textarea
				margin-top 2em
				width 100%

		
		.guide-text
			width 100%
			
			p
				font-size 19px
				font-weight 300
				margin-top 1.5em
				
				span
					font-weight 500
					font-size 22px
		
		.guide-question-multiple
			
			h2
				color texts-color
				font-size 26px
				text-align center
			
			.answers-w
				display flex
				flex-direction column
				
				.answers
					background #fff
					border 2px solid #e9e9e9
					padding 10px
					width 250px
				
				.top-answers
					display flex
					margin-top 3em
					
					.ans-1
						margin-right auto
					
					.ans-2
						margin-left auto
						
				.bottom-answers
					display flex
					margin-top 1em
					
					.ans-3
						margin-right auto
					
					.ans-4
						margin-left auto
					
					
				

				
		
	
	

	

		



	


	