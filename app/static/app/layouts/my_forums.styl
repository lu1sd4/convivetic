.my-forums-c
	background-color blocks-background
	display flex
	justify-content center
	padding 3em 30px
	
	.my-forums-wrapper
		display flex
		flex-direction column
		max-width 800px
		width 100%
		
		h3
			font-weight 300
			font-size 25px
		
		hr
			margin-top 0.2em
			margin-bottom 1.7em
			width 100%

		@media (max-width: 767.99px)
			padding 0 5px
			width 100%

			.my-forum-item
				flex-direction column
				margin-bottom 2em !important
				
				.f-image
					display flex
					justify-content center
					margin-right 0px !important
					width 100% !important
				
				.my-forum-inline
					margin-top 1em !important
					width 100% !important
					
					.for-data
						flex-direction column !important
						
						a
							text-align center
						
						.comment-c
							margin-left inherit !important
							margin-right auto
							width 45px !important

		.mf-image
			margin-right 2.6%
			width 10%
				
		.my-forum-inline
			width 88.4%

		.my-forum-item
			background-color #fff
			box-shadow 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.1)
			display flex
			flex-grow 2
			margin-bottom 1em
			padding 1.5em 2em
			position relative

			.for-data
				display flex
				
				a
					color links-color 
					font-weight 600
					max-width 630px
				
				.comment-c
					margin-left auto
					position absolute
					top 10px
					right 3%

					@media(min-width 768px)
						top 35%
					
					svg
						color #9e9e9e
						font-size 40px
						
					.comment-counter
						color #9e9e9e
						font-weight 300
						font-size 15px
						position absolute
						top 7px
						text-align center
						left 0
						right 0
						margin auto
						
			
			.my-forum-publisher
				.mf-date
					margin-bottom 0
					font-weight 300
					font-size 15px
				
				.mf-name 
					margin-bottom 0
					font-weight 300

			.mf-image
				@media(max-width 767.99px)
					display flex
					justify-content center
					margin-right 0px !important
					width 100% !important