.register-container

	@media (min-width 576px)
		background-image url('img/background.jpg')
		min-height 100vh
		background-size cover
		display flex
		flex-direction column	

		&::before,&::after
			box-flex 1
			flex-grow 1
			content ''
			display block
			height 24px
		&::before
			min-height 30px

	.register-box

		width 100%
		flex-shrink 0
		box-shadow 0 4px 4px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2)
		margin 0 auto
		background white
		padding 30px
		height 100vh
		display flex
		flex-direction column
		justify-content space-between

		.register-section
			overflow hidden
			&.ng-hide-add,
			&.ng-hide-remove
				-webkit-transition  1s ease-in-out opacity
			    -moz-transition     1s ease-in-out opacity
			    -ms-transition      1s ease-in-out opacity
			    -o-transition       1s ease-in-out opacity
			    transition          1s ease-in-out opacity
			    opacity             1
			&.ng-hide
				opacity 0

		@media (min-width 576px)
			width 60%
			max-width 450px
			height auto

		@media (min-width: 992px)
			width 70%
			max-width 600px

		.register-state-container

			display flex
			justify-content center			

			.register-state-circle				
				width 10px
				height 10px
				margin-left 5px
				margin-right 5px
				background-color shadow-color
				&.active
					background-color primary-color

		.register-yesno
			display flex
			list-style-type none
			padding-left 0
			justify-content center
			align-items center
			li
				margin-left 10px
				margin-right 10px