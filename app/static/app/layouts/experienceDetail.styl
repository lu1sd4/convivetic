.exp-d-c
	display flex
	justify-content center
	margin 4em 0
	padding 0 80px
	
	@media (max-width 767.99px)
		padding 0 40px !important
	
	.exp-d-wrapper
		display flex
		flex-wrap wrap
		max-width 1200px
		width 100%
		
		.d-left-c
			margin-right 5%
			width 65%
			
			@media (max-width 1200px)
				margin-right 0 !important
				width 100% !important
				margin-bottom 1em
			
			.d-header
				display flex
				flex-wrap wrap
				
				.p-info
					margin-right 2%
					width 80%
					
					@media (max-width 576px)
						margin-right 0 !important
						width 100% !important
					
					h4
						color texts-color
						font-weight 600
						font-size 28px
					
					p
						font-weight 300
						font-size 18px
						padding 0
						margin 0
						color texts-color
					
						span
							font-weight 500
							color links-color !important
				
				.d-graphical
					width 18%
					
					@media (max-width 576px)
						margin 1.3em 0
						width 100% !important
			
			.ex-status
				display flex
				align-items center
				h4
					font-weight 300
				.filler
					flex-grow 1

			.tags
				display flex
				justify-content flex-start				
				margin-top 1em		
					
				ul
					display flex
					width 100%
					
					@media (max-width 575.99px)
						flex-direction column
						
						li
							margin-top 0.5em
					
					a
						text-decoration none

					li
						padding 8px
						background icon-gray-color
						color #fff
						margin-right 5px
						&.filler
							flex-grow 1
							background transparent
			
			hr
				width 100%
			
			.d-content
				font-weight 300
				font-size 17px
				color texts-color
					
		
		.d-right-c
			width 30%

			@media (max-width 575.99px)
				width 100% !important
			
			.d-right-content
				width 100%

				display flex
				flex-direction column
				justify-content center
				
				img
					width 365px
					
					@media (max-width 575.99px)
						width 250px !important
				
				.d-social-c
					display flex
					margin-top 1em
					
					.d-social-left
						display flex
						margin-right auto
						
						.detail-n

							display flex
							flex-direction row

							.filler
								width 15px
							
							.forum-likes,
							.forum-dislikes

								display flex
								flex-direction row

								h5
									color texts-color
									font-weight 300
									font-size 18px

								svg
									color shadow-color
									height 20px
									width 20px
									margin-right 8px

								.thread-like,
								.thread-dislike
									margin-right 3px
									cursor pointer
									height 20px
									width 20px								
									.fa-thumbs-up:hover
										color green									
									.fa-thumbs-down:hover
										color red
								.thread-like.active
									.fa-thumbs-up
										color green
								.thread-dislike.active
									.fa-thumbs-down
										color red
								
					.d-social-right
						display flex
						margin-left auto
						
						h5
							font-weight 300

						svg
							color links-color
							margin-right 5px
							height 20px
							width 20px
						
					
		

		
		